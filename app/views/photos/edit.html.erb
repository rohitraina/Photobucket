<div id="sub-header" class="interior">
	<div id="sub-header-inner">
	    <h2>Edit Photo</h2>
	</div>
</div>


<div id="content" class="clearfix">
	<div id="content-inner">
		<%= image_tag @photo.file.preview.url %>
		 
		<%= form_for @photo do |f| %>
		  <%= hidden_field_tag :bucket_id, params[:bucket_id] %>
		  <%= hidden_field_tag :album_id, params[:album_id] %>
		  <% if @photo.errors.any? %>
		    <div id="error_explanation">
		      <h2><%= pluralize(@photo.errors.count, "error") %> prohibited this photo from being saved:</h2>
		
		      <ul>
		      <% @photo.errors.full_messages.each do |msg| %>
		        <li><%= msg %></li>
		      <% end %>
		      </ul>
		    </div>
		  <% end %>
		  <%= render :partial => "form", :object => f %>
		  <%= f.submit "Update" %>
		<% end %>
	</div>
</div>

<%= content_for :action_links do %>
	<%= link_to("Delete photo", { :action => "destroy", :id => @photo, :bucket_id => params[:bucket_id] },
	  :confirm => "Are you sure you want to delete this photo?",
	  :method => :delete) %>
<% end %>